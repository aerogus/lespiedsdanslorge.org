@keyframes animatetop
  from
    top -300px
    opacity 0
  to
    top 0
    opacity 1

.modal
  display none
  position fixed
  background-color white
  width 100%
  top 4rem
  left 0
  width 100%
  height 100%
  overflow auto
  background-color rgb(0,0,0)
  background-color rgba(0,0,0,0.4)

  .modal-content
    position relative
    background-color #fefefe
    border-radius 10px
    margin 2rem auto
    padding 2rem
    border 1px solid #888
    width 80%
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19)
    animation-name animatetop
    animation-duration 0.4s

    .close-button
      position absolute
      right 1rem
      top 1rem

    .fluid-video
      position relative
      padding-bottom 56.25% /* 16:9 */
      padding-top 25px
      height 0

      iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%