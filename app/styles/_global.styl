html,
body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  background-color light_yellow
  background-image url(/img/aquarelle.jpg)
  color #292933
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased /* fix bold mac osx */

.main-content
  margin-top 4rem

section
  padding 1.6rem

h1,
h2,
h3,
h4
  font-family 'DK Longreach', sans-serif
  color dark_blue

.artiste
  text-align center
  h4.button
    font-family 'DK Longreach', sans-serif
    font-size 1.6rem
    color light_yellow
    text-transform uppercase
    width 100%
    background-color dark_blue

.rer,
.rerc
  display inline-block
  border-radius 50%
  border 2px solid
  font-weight bold

.rer
  color #164b9c
  padding 3px 0
  font-size 14px

.rerc
  color #eac81c
  padding 0px 7px

#planning-table
  a
    font-weight bold
    text-transform uppercase

footer
  background-color #292933
  color #fefefe
  text-align center
  padding 2rem 1rem 1rem 1rem
  a
    color #fefefe
